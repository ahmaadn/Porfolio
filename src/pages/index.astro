---
import Page from "../layouts/PageLayout.astro";
import { Picture } from "astro-imagetools/components";
import { Code } from "astro/components";
---

<Page>
   <header class="h-full overflow-auto p-6 flex flex-col gap-10 lg:flex-row">
      <div
         class="space-y-1 text-base-100 lg:w-3/5 lg:flex justify-center items-center"
      >
         <div>
            <p class="text-lg">Hello all. I'm</p>
            <h1 class="text-5xl font-bold lg:text-8xl">Ahmad nur</h1>
            <div class="mt-3 font-sans text-sm lg:text-base lg:mt-8">
               <Code
                  code={`# you can also see it on my Github page\nlink: str = "https://github.com/ahmaadn"\nprint(link)`}
                  lang="python"
                  theme="css-variables"
               />
               <span>&gt;&gt;&gt;&nbsp;</span><a
                  href="/"
                  class="text-primary hover:underline"
                  >https://github.com/ahmaadn</a
               >
            </div>
         </div>
      </div>
      <div class="flex items-center justify-center lg:w-2/5">
         <div class="w-56 lg:w-64 relative">
            <div
               class="absolute inset-0 bg-white rounded-xl origin-bottom-left transform -rotate-6"
            >
            </div>
            <Picture
               src="/assets/profile_pict.jpg"
               alt="ahmad nur sahid"
               width="480"
               height="480"
               breakpoints={[400, 800]}
               preload="webp"
               attributes={{
                  picture: {
                     class: "overflow-hidden rounded-xl shadow-md shadow-gray-300",
                  },
               }}
            />
         </div>
      </div>
   </header>
</Page>

<style>
   :root {
      --astro-code-token-comment: #b362ff;
      --astro-code-token-string-expression: #ffc300;
      --astro-code-token-function: #ff9d00;
      --astro-code-token-constant: #ff9d00;
   }
</style>
