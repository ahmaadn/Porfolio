---
import BaseContent from "./BaseContent.astro";
import Avatar from "@/components/Avatar.astro";
import { SITE } from "@/config";
---

<BaseContent id="me" title="About me">
	<div class="flex flex-col gap-y-8 md:flex-row">
		<Avatar />
		<div class="space-y-4 md:text-lg">
			{SITE.description.map((desc) => <p>{desc}</p>)}
		</div>
	</div>
	<div class="absolute left-0 top-0 -z-10 md:left-32">
		<p class="text-[15rem] font-bold text-neutral-300 dark:text-neutral-800">About Me</p>
	</div>
</BaseContent>
