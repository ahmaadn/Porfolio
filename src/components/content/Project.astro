---
import BaseContent from "./BaseContent.astro";
import { Icon } from "astro-iconify";
import { PROJECTS } from "../../config";
import Badge from "../Badge.astro";
---

<BaseContent id="project" title="Project">
	<div class="flex flex-col gap-4">
		{
			PROJECTS.map(({ name, tags, url }) => (
				<a
					class="card inline-flex w-full items-center gap-2 rounded-md border-2 border-neutral-300 p-4 opacity-80 transition-all duration-300 dark:border-neutral-400"
					href={url}>
					<div class="flex-1 font-semibold">
						<p class="mb-4 text-sm">MAR 14, 2024</p>
						<h2 class="text-base font-bold text-neutral-950 dark:text-neutral-100">{name}</h2>
						<p class="text-sm">Mambuat website ecommers sederhana </p>
						<div class="mt-2 inline-flex flex-wrap gap-2">
							{tags.map((tag) => (
								<Badge>{tag}</Badge>
							))}
						</div>
					</div>
					<div>
						<Icon size="20" name="ep:top-right" />
					</div>
				</a>
			))
		}
	</div>
</BaseContent>
<style>
	.card {
		@apply hover:border-orange-600 hover:opacity-100 hover:shadow-md hover:shadow-orange-600/50;
	}
	@media screen and (max-width: 768px) {
		.card {
			@apply border-orange-600 opacity-100 shadow-md shadow-orange-600/50;
		}
	}
</style>
