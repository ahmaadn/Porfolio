---
import type { HTMLAttributes } from "astro/types";
import { iconPaths } from "@/lib/icon-path";

interface Props extends HTMLAttributes<"svg"> {
	icon: keyof typeof iconPaths;
	size?: string;
}

const { size = "20px", icon, ...props } = Astro.props;
const iconPath = iconPaths[icon];
const style = {
	"--size": size,
	width: "var(--size, 1em)",
	height: "var(--size, 1em)",
};
---

<svg
	xmlns="http://www.w3.org/2000/svg"
	viewBox={iconPath.viewBox}
	width="40"
	height="40"
	aria-hidden="true"
	color="currentcolor"
	fill="currentcolor"
	style={style}
	{...props}
>
	<Fragment set:html={iconPath.path} />
</svg>
