---
import { cn } from "@/lib/utils";
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
	href: string;
	className?: string;
}

const { href, className, ...props } = Astro.props;
const active = Astro.url.pathname === href || (href !== "/" && Astro.url.pathname.startsWith(href));
---

<a
	href={href}
	class={cn(
		"transition-colors hover:text-foreground/90",
		active ? "text-foreground" : "text-foreground/70",
		className
	)}
	aria-current={active}
	{...props}
>
	<slot />
</a>
