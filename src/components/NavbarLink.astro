---
interface Props {
   href?: string;
   className?: string;
}

const { href, className } = Astro.props;
const active =
   Astro.url.pathname === href ||
   (href !== "/" && Astro.url.pathname.startsWith(href));
---

<a href={href} class:list={[className, { active: active }]} aria-current={active}>
   <slot />
</a>
