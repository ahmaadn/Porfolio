---
import { ViewTransitions } from "astro:transitions";
import { SEO } from "astro-seo";
import { SITE } from "@/config";
import image from "@/assets/profile_pict.jpg";

interface Props {
	title?: string;
	description?: string;
}

const { description = SITE.description, title } = Astro.props;
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width" />
<SEO
	title={title}
	titleDefault={SITE.title}
	titleTemplate={SITE.title + " - %s"}
	description={description}
	extend={{
		link: [{ rel: "icon", href: "/favicon.svg" }],
	}}
	openGraph={{
		basic: {
			title: SITE.title,
			type: "website",
			image: image.src,
		},
	}}
/>
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link
	href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&family=Noto+Sans+Mono:wght@100;300;400;500;600;700&display=swap"
	rel="stylesheet"
/>
<ViewTransitions />
